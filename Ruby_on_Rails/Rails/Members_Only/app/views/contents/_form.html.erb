<%= form_with(model: content) do |form| %>
  <% if content.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
        <% content.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    
  <div>
    <%= form.label :title %><br />
    <%= form.text_field :title, autofocus: true, autocomplete: "title" %>
  </div>
  <div>
    <%= form.label :body %><br />
    <%= form.text_area :body, autofocus: true, autocomplete: "body" %>
  </div>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <div>
    <%= form.submit %>
  </div>
<% end %>
